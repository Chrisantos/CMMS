                                <form action="/inventory/add-equipment" method="post" name='equipt_form'>
                                    <div class="row mb-3">
                                        <div class="col-lg-4">
                                            <label>Equipment Name</label>
                                            <input type="text" class="form-control" required ="required" placeholder="Enter Name" name="name" id="name">
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Model </label>
                                            <input type="text" class="form-control" required ="required"  placeholder="Enter Model" name="model" id="model">
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Serial Number </label>
                                            <input type="number" class="form-control" required ="required"  placeholder="Enter SN" name="serial_num" id="serial_num">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label>Country of Origin</label>
                                            <select name="country_origin" id="country_origin" class="form-control">
                                                <option value="nigeria">Nigeria</option>
                                                <option value="ghana">Ghana</option>
                                                <option value="usa">USA</option>
                                                <option value="japan">Japan</option>
                                                <option value="germany">Germany</option>
                                                <option value="china">China</option>
                                                <option value="britain">Britain</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Manufacturer </label>
                                            <input type="text" class="form-control" required ="required"  placeholder="Enter Manufacturer" name="manufacturer" id="manufacturer">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label>Order Number</label>
                                            <input type="number" class="form-control" required ="required"  placeholder="Enter Order Number" name="order_num" id="order_num">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Manufacture Date </label>
                                            <input type="date" class="form-control" required ="required"  placeholder="Enter Manufacture Date" name="manuf_date" id="manuf_date">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label>Receive Date</label>
                                            <input type="date" class="form-control" required ="required"  placeholder="Received" name="received_date" id="received_date">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Warranty Expire </label>
                                            <input type="date" class="form-control" required ="required"  placeholder="Warranty" name="warr_exp_date" id="warr_exp_date">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label>Install Date</label>
                                            <input type="date" class="form-control" required ="required"  placeholder="Enter Install Date" name="install_date" id="install_date">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Current State </label>
                                            <input type="text" class="form-control" required ="required"  placeholder="Enter Current State" name="current_state" id="current_state">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label>Supplier Name</label>
                                            <input type="text" class="form-control" required ="required"  placeholder="Enter Supplier Name" name="supplier_name" id="supplier_name">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Supplier Phone Number </label>
                                            <input type="number" class="form-control" required ="required"  placeholder="Enter Supplier Number" name="supplier_phnum" id="supplier_phnum">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-lg-6">
                                            <label>Cost </label>
                                            <input type="number" class="form-control" required ="required"  placeholder="Enter Cost" name="cost" id="cost">
                                        </div>
                                        <div class="col-lg-6">
                                            <label>Power Rating Required </label>
                                            <input type="number" class="form-control" required ="required"  placeholder="Enter Power Rating Required" name="power_req" id="power_req">
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-0"> </div>
                                        <div class="col-md-12">
                                            <div class="custom-control custom-checkbox mr-sm-2 col-lg-6">
                                                <input type="checkbox" class="custom-control-input" required ="required"  id="spare_avail" name="spare_avail">
                                                <label class="custom-control-label" for="spare_avail">Spare Available</label>
                                            </div>
                                            <br>
                                            <div class="custom-control custom-checkbox mr-sm-2 col-lg-6">
                                                <input type="checkbox" class="custom-control-input" required ="required"  id="manual_avail" name="spare_avail">
                                                <label class="custom-control-label" for="manual_avail">Manual Available</label>
                                            </div>
                                        </div>                                        
                                    </div>
                                    <div class="row mb-3">
