                                        <div class="col-lg-6">
                                            <label>Location</label>
                                            <input type="text" class="form-control" required ="required"  id="location" placeholder="Enter Location" name="location" id="location">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Notes</label>
                                        <textarea class="form-control" required ="required"  name="notes" id="notes"></textarea>                                    
                                    </div>
                                    <input type="submit" value="Add" class="btn btn-info">
                                </form>
                                
