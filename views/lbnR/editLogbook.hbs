                        <form action="/logbook/update" method="post" name='logbook_form'>
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label for="equipt">Equipment</label>
                                            <select name="equipt" id="equipt" class="form-control">
                                                <option>Select Equipment</option>
                                                {{#each equipments}}
                                                    <option value="{{name}} - {{inv_id}}">{{name}} - {{inv_id}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label for="fault">Fault</label>
                                            <textarea name="fault" id="fault" cols="30" rows="3" class="form-control" placeholder="Enter the fault">{{log.fault}}</textarea>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label for="spares_req">Spares Required</label>
                                            <textarea name="spares_req" id="spares_req" cols="30" rows="3" class="form-control" placeholder="Enter the spares required">{{log.spares_req}}</textarea>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label for="failure_date">Failure Date</label>
                                            <input type="date" class="form-control" placeholder="Enter Failure Date" name="failure_date" id="failure_date" value="{{log.failure_date}}">
                                        </div>
                                        <div class="col-lg-6">
                                            <label for="repair_date">Repair Date</label>
                                            <input type="date" class="form-control" placeholder="Enter Repair Date" name="repair_date" id="repair_date" value="{{log.repair_date}}">
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label for="repair_month">Repair Month</label>
                                            <select name="repair_month" id="repair_month" class="form-control">
                                                <option>Select Month</option>
                                                <option value="1">January</option>
                                                <option value="2">February</option>
                                                <option value="3">March</option>
                                                <option value="4">April</option>
                                                <option value="5">May</option>
                                                <option value="6">June</option>
                                                <option value="7">July</option>
                                                <option value="8">August</option>
                                                <option value="9">September</option>
                                                <option value="10">October</option>
                                                <option value="11">November</option>
                                                <option value="12">December</option>
                                            </select>
                                        </div>
                                        <div class="col-lg-6">
                                            <label for="cost">Cost</label>
                                            <input type="number" name="cost" id="cost" class="form-control" placeholder="Enter Cost" value="{{log.cost}}">
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label for="engineer_username">Engineer Username</label>
                                            <select name="engineer_username" id="engineer_username" class="form-control">
                                                <option>Select Engineer</option>
                                                {{#each engineers}}
                                                    <option value="{{username}}">{{username}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="col-lg-6">
                                            <label for="operator_username">Operator Username</label>
                                            <select name="operator_username" id="operator_username" class="form-control">
                                                <option>Select Operator</option>
                                                {{#each operators}}
                                                    <option value="{{username}}">{{username}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label for="department">Department</label>
                                            <select name="department" id="department" class="form-control">
                                                <option>Select Department</option>
                                                {{#each departments}}
                                                    <option value="{{name}}">{{name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        <div class="col-lg-6">
                                            <label for="equipt_loc">Equipment Location</label>
                                            <input type="text" name="equipt_loc" id="equipt_loc" class="form-control" placeholder="Enter Equipment Location" value="{{log.equipt_loc}}">
                                        </div>
                                    </div>

                                </div>
                                <input type="hidden" name="logbook_id" value="{{log.logbook_id}}">
                                <div class="border-top">
                                    <div class="card-body">
                                        <input type="submit" value="Save" class="btn btn-primary">
                                    </div>
                                </div>
                            </div>
