                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="chat-box scrollable" style="height:475px;">
                                    <!--chat Row -->
                                    <ul class="chat-list">
                                        {{#each messages_other}}
                                            <!--chat Row -->
                                            <li class="chat-item">
                                            <div class="chat-img"><img src="../../assets/images/users/2.jpg" alt="user"></div>
                                                <div class="chat-content">
                                                    <h6 class="font-medium">{{from}}</h6>
                                                    <div class="box bg-light-info">{{message}}</div>
                                                </div>
                                                <div class="chat-time">{{chat_date}}</div>
                                            </li>
                                        {{/each}}
                                        {{#each messages_me}}
                                            <!--chat Row -->
                                            <li class="odd chat-item">
                                                <div class="chat-content">
                                                    <h6 class="font-medium">{{to}}</h6>
                                                    <div class="box bg-light-inverse">{{message}}</div>
                                                    <br>
                                                    <div class="chat-time">{{chat_date}}</div>
                                                </div>
                                            </li>
                                        {{/each}}
                                        <!--workorders -->
                                        {{#each workOrders}}
                                            <!--chat Row -->
                                            <li class="chat-item">
                                                <div class="chat-content">
                                                    <div class="box bg-light-info" style="float:right; margin-right:-45px;">
                                                        <h6 class="font-medium">{{engineer_username}}</h6>
                                                        <h6 class="font-medium" style="font-style:italic;">Work Order</h6> <br>
                                                    
                                                        <p><strong>Equipment: </strong> {{equipt}}</p>  
                                                        <p><strong>Location: </strong> {{department}} <strong>at: </strong> {{equipt_loc}}</p>
                                                        <p><strong>Spares: </strong> {{spares}}</p>
                                                        <p><strong>Accessories: </strong> {{accessories}}</p>
                                                        <p><strong>Fault: </strong> {{fault}}</p>
                                                        <p><strong>Engineer ID: </strong> {{engineer_username}}</p>
                                                    </div>
                                                </div>
                                                <div class="chat-time" style="float:right; margin-right:25px;">{{time}}</div>
                                            </li>
                                        {{/each}}
                                        <!--cmRequest -->
                                        {{#each requests}}
                                            <!--chat Row -->
                                            <li class="chat-item">
                                            <div class="chat-img"><img src="../../assets/images/users/2.jpg" alt="user"></div>
                                                <div class="chat-content">
                                                    <h6 class="font-medium">{{operator_username}}</h6>
                                                    <h6 class="font-medium" style="font-style:italic;">CM Request</h6> <br>
                                                    <div class="box bg-light-info">
                                                        <p><strong>Equipment Name: </strong> {{equipt}}</p>
                                                        <p><strong>Location: </strong>       {{department}} <strong>at:</strong> {{location}}</p>
                                                        <p><strong>Statement: </strong>      {{statement}}</p>
                                                        <p><strong>Date Failed: </strong>    {{fail_date}}</p>
                                                    </div>
                                                </div>
                                                <div class="chat-time">{{time}}</div>
                                            </li>
                                        {{/each}}
                                        <!--chat Row -->
                                    </ul>
                                </div>
                            </div>
                            <div class="accordion" id="accordionExample">
