                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-lg-8">
                                                    <textarea name="fault" id="" cols="20" rows="2" class="form-control" placeholder="Fault"></textarea>
                                                </div>
                                                <div class="col-lg-4">
                                                    <a class="btn-circle btn-lg btn-cyan float-right text-white" onclick="document.getElementById('work_order').submit(); return false;"><i class="fas fa-paper-plane"></i></a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion" id="accordionExample">
                                <div class="card m-b-0">
                                    <div class="card-header" id="headingOne">
                                    <h6 class="mb-0">
                                        <a  data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                            <i class="fas fa-paper-plane" aria-hidden="true"></i>
                                            <span style="color:rgb(94, 94, 245)">Text Message</span>
                                        </a>
                                    </h6>
                                    </div>
                                    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                    <div class="card-body border-top">
                                        <form action="/admin_r" method="post" id="plain_message">
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    <select name="to" id="to" class="form-control">
                                                        <option>Select Recipient</option>
                                                        <optgroup label="Engineers">
                                                            {{#each engineers}}
                                                                <option value="{{username}}">{{username}}</option>
                                                            {{/each}}
                                                        </optgroup>
                                                        <optgroup label="Operators">
                                                            {{#each operators}}
                                                                <option value="{{username}}">{{username}}</option>
                                                            {{/each}}
                                                        </optgroup>
                                                    </select>
                                                </div>
                                                <div class="col-9">
                                                    <div class="input-field m-t-0 m-b-0">
                                                        <textarea id="message" name="message" placeholder="Type and enter" class="form-control border-0"></textarea>
                                                    </div>
                                                </div>
                                                <div class="col-3">
                                                    <a class="btn-circle btn-lg btn-cyan float-right text-white" onclick="document.getElementById('plain_message').submit(); return false;"><i class="fas fa-paper-plane"></i></a>
                                                </div>
                                            </div>
